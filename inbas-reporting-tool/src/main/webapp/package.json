{
  "name": "inbas-reporting-tool",
  "version": "1.0.0",
  "description": "Reporting tool for the INBAS project.",
  "main": "js/app.js",
  "dependencies": {
    "react": "~0.14.3",
    "react-dom": "~0.14.3",
    "react-addons-linked-state-mixin": "~0.14.3",
    "keymirror": "~0.1.0",
    "object-assign": "~4.0.1",
    "superagent": "~1.2.0",
    "react-router": "~1.0.0",
    "history": "~1.13.1",
    "react-bootstrap": "~0.27.3",
    "react-router-bootstrap": "~0.19.3",
    "body-parser": "~1.4.3",
    "express": "~4.4.5",
    "reflux": "~0.3.0",
    "kbss-react-bootstrap-datetimepicker": "https://dev.inbas.cz/dist/kbss-react-bootstrap-datetimepicker-0.0.3.tgz",
    "classnames": "~2.2.0",
    "react-typeahead": "~1.1.5",
    "remarkable": "~1.6.0",
    "js-cookie": "~2.0.3",
    "halogen": "~0.1.10",
    "react-intl": "~2.0.0-beta-2"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "envify": "^3.4.0",
    "reactify": "^0.15.2",
    "uglify-js": "^2.4.15",
    "watchify": "^2.1.1",
    "babelify": "^7.2.0",
    "clean-css": "^3.4.3",
    "jasmine": "^2.3.2",
    "jasmine-core": "^2.3.4",
    "jasmine-reporters": "^2.0.7",
    "react-addons-test-utils": "^0.14.3",
    "babel-core": "^6.1.2",
    "babel-loader": "^6.0.1",
    "babel-preset-es2015": "^6.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.1.3",
    "babel-preset-react": "^6.1.2",
    "jsdom": "^7.0.2",
    "null-loader": "^0.1.1",
    "rewire": "^2.3.4",
    "webpack": "^1.12.9"
  },
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d js/app.js",
    "browserify": "browserify . -t [envify --NODE_ENV production] -o js/bundle.js",
    "build-js": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > ../../../profiles/production/js/bundle.min.js",
    "build-css": "cleancss -d -o ../../../profiles/production/resources/css/inbas-audit.min.css resources/css/inbas-audit.css",
    "build": "npm run build-css & npm run build-js",
    "prebuild": "npm install",

    "test": "jasmine JASMINE_CONFIG_PATH=tests/jasmine.json"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },

  "author": "Martin Ledvinka"
}
