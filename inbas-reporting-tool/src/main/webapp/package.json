{
  "name": "inbas-audit-tool",
  "version": "1.0.0",
  "description": "Reporting tool for the INBAS project.",
  "main": "js/app.js",
  "dependencies": {
    "react": "^0.13.3",
    "keymirror": "~0.1.0",
    "object-assign": "^2.0.0",
    "superagent": "^1.2.0",
    "react-router": "^0.13.3",
    "react-bootstrap": "^0.23.7",
    "react-router-bootstrap": "~0.14.0",
    "body-parser": "^1.4.3",
    "express": "^4.4.5",
    "reflux": "^0.2.7",
    "react-bootstrap-datetimepicker": "^0.0.18",
    "classnames": "^2.1.2",
    "react-typeahead": "~1.1.3",
    "remarkable": "~1.6.0",
    "js-cookie": "~2.0.3",
    "halogen": "~0.1.10"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.5.5",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1",
    "react-tools": "^0.13.3",
    "clean-css": "^3.4.3"
  },
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d js/app.js",
    "browserify": "browserify . -t [envify --NODE_ENV production] -o js/bundle.js",
    "build-js": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > ../../../profiles/production/js/bundle.min.js",
    "build-css": "cleancss -d -o ../../../profiles/production/resources/css/inbas-audit.min.css resources/css/inbas-audit.css",
    "build": "npm run build-css & npm run build-js",
    "test": "jest",

    "prebuild": "npm install"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/test/preprocessor.js",
    "unmockedModulePathPatterns": ["<rootDir>/node_modules/react"]
  },
  "author": "Martin Ledvinka"
}
