{
  "name": "inbas-reporting-tool",
  "version": "1.0.0",
  "description": "Reporting tool for the INBAS project.",
  "main": "js/app.js",
  "dependencies": {
    "react": "~0.14.2",
    "react-dom": "~0.14.2",
    "react-addons-linked-state-mixin": "~0.14.2",
    "keymirror": "~0.1.0",
    "object-assign": "~4.0.1",
    "superagent": "~1.2.0",
    "react-router": "~1.0.0-rc4",
    "react-bootstrap": "~0.27.3",
    "react-router-bootstrap": "~0.19.3",
    "body-parser": "~1.4.3",
    "express": "~4.4.5",
    "reflux": "~0.3.0",
    "kbss-react-bootstrap-datetimepicker": "https://dev.inbas.cz/jenkins/job/KBSS-react-bootstrap-datetimepicker/lastSuccessfulBuild/artifact/kbss-react-bootstrap-datetimepicker-0.0.2.tgz",
    "classnames": "~2.2.0",
    "react-typeahead": "~1.1.5",
    "remarkable": "~1.6.0",
    "js-cookie": "~2.0.3",
    "halogen": "~0.1.10"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.7.1",
    "reactify": "^0.15.2",
    "uglify-js": "^2.4.15",
    "watchify": "^2.1.1",
    "react-tools": "^0.13.3",
    "clean-css": "^3.4.3",
    "jasmine-reporters": "^1.0.0",
    "react-addons-test-utils": "^0.14.2"
  },
  "scripts": {
    "start": "watchify -o js/bundle.js -v -d js/app.js",
    "browserify": "browserify . -t [envify --NODE_ENV production] -o js/bundle.js",
    "build-js": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > ../../../profiles/production/js/bundle.min.js",
    "build-css": "cleancss -d -o ../../../profiles/production/resources/css/inbas-audit.min.css resources/css/inbas-audit.css",
    "build": "npm run build-css & npm run build-js",
    "test": "jest tests/__tests__",

    "prebuild": "npm install"
  },
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/tests/preprocessor.js",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react",
      "<rootDir>/node_modules/react-dom",
      "<rootDir>/node_modules/react-addons-linked-state-mixin",
      "<rootDir>/node_modules/reflux",
      "<rootDir>/node_modules/object-assign",
      "<rootDir>/node_modules/kbss-react-bootstrap-datetimepicker"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setup-jasmine-env.js"
  },
  "author": "Martin Ledvinka"
}
