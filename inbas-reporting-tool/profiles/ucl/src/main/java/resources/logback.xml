<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <contextName>UCL</contextName>

    <!-- Send debug messages to System.out -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%date{dd-MM-yyyy HH:mm:ss.SSS} [%contextName] [%thread] %-5level %logger{30} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="EMAILS_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>%date{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{30} - %msg%n</pattern>
        </encoder>
        <file>${catalina.base}/logs/email-import.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>${catalina.base}/logs/email-import.%d{yyyy-MM-dd}.log</fileNamePattern>

            <!-- keep 15 days' worth of history capped at 1GB total size -->
            <maxHistory>15</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>

        </rollingPolicy>
    </appender>

    <!-- Just INFO for JOPA -->
    <logger name="cz.cvut.kbss.jopa" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- and OntoDriver -->
    <logger name="cz.cvut.kbss.ontodriver" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Log emails separately to prevent log pollution -->
    <logger name="cz.cvut.kbss.datatools" level="DEBUG" additivity="false">
        <appender-ref ref="EMAILS_FILE"/>
    </logger>

    <logger name="cz.cvut.kbss.reporting.service.data.mail" level="DEBUG" additivity="false">
        <appender-ref ref="EMAILS_FILE"/>
    </logger>

    <!-- Logger for our app -->
    <logger name="cz.cvut.kbss" level="TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Restrict logging of the Sesame HTTP client (used to connect to remote repositories -->
    <logger name="org.openrdf.http" level="WARN" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Restrict logging of Spring -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>


    <logger name="org.apache.http" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="cz.cvut.kbss.eccairs" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>


    <!-- By default, the level of the root level is set to INFO -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>